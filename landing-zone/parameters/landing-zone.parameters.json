{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    // ───────────────────────────────────────────────────────────────────────────
    // 1a) Subscription & Resource Group
    // ───────────────────────────────────────────────────────────────────────────
    "location": {
      "value": "eastus"
    },
    "rgName": {
      "value": "landingZone-RG"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // 1b) Network module parameters
    // ───────────────────────────────────────────────────────────────────────────
    "vnetName": {
      "value": "landingZone-vnet"
    },
    "addressPrefix": {
      "value": "10.0.0.0/16"
    },
    "subnetPrefix": {
      "value": "10.0.1.0/24"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // 1c) NSG module parameters
    // ───────────────────────────────────────────────────────────────────────────
    "nsgName": {
      "value": "landingZone-NSG"
    },
    "nsgRules": {
      "value": [
        {
          "name": "AllowSSH",
          "priority": 100,
          "direction": "Inbound",
          "access": "Allow",
          "protocol": "Tcp",
          "sourcePortRange": "*",
          "destinationPortRange": "22",
          "sourceAddressPrefix": "*",
          "destinationAddressPrefix": "*",
          "description": "Allow SSH from anywhere"
        },
        {
          "name": "DenyAllInbound",
          "priority": 4096,
          "direction": "Inbound",
          "access": "Deny",
          "protocol": "*",
          "sourcePortRange": "*",
          "destinationPortRange": "*",
          "sourceAddressPrefix": "*",
          "destinationAddressPrefix": "*",
          "description": "Deny all other inbound traffic"
        }
      ]
    },

    // ───────────────────────────────────────────────────────────────────────────
    // 1d) JIT module parameter
    // ───────────────────────────────────────────────────────────────────────────
    "vmName": {
      "value": "landingZone-VM"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // 1e) Diagnostics module parameter
    // ───────────────────────────────────────────────────────────────────────────
    "diagnosticsWorkspaceId": {
      "value": "/subscriptions/b222b4c3-dfc2-4533-a6bb-2305e55c8eb6/resourceGroups/LogAnalytics-RG/providers/Microsoft.OperationalInsights/workspaces/MyLAWorkspace"
    }

    // 1f & 1g) We do NOT supply policyAssignmentSpec or roleAssignmentSpec here,
    //             because those are loaded from the JSON files under template-specs/
    //             via loadJsonContent().
  }
}
