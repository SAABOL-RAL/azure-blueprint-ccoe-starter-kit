{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    // ───────────────────────────────────────────────────────────────────────────
    // Subscription & Resource Group
    // ───────────────────────────────────────────────────────────────────────────
    "location": {
      "value": "eastus"
    },
    "rgName": {
      "value": "landingZone-RG"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // Network module parameters
    // ───────────────────────────────────────────────────────────────────────────
    "vnetName": {
      "value": "landingZone-vnet"
    },
    "addressPrefix": {
      "value": "10.0.0.0/16"
    },
    "subnetPrefix": {
      "value": "10.0.1.0/24"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // NSG module parameters (each rule must include "protocol")
    // ───────────────────────────────────────────────────────────────────────────
    "nsgName": {
      "value": "landingZone-NSG"
    },
    "nsgRules": {
      "value": [
        {
          "name": "AllowSSH",
          "priority": 100,
          "direction": "Inbound",
          "access": "Allow",
          "protocol": "Tcp",                   // ← REQUIRED
          "sourcePortRange": "*",
          "destinationPortRange": "22",
          "sourceAddressPrefix": "*",
          "destinationAddressPrefix": "*",
          "description": "Allow SSH from anywhere"
        },
        {
          "name": "AllowHTTPS",
          "priority": 200,
          "direction": "Inbound",
          "access": "Allow",
          "protocol": "Tcp",                   // ← REQUIRED
          "sourcePortRange": "*",
          "destinationPortRange": "443",
          "sourceAddressPrefix": "*",
          "destinationAddressPrefix": "*",
          "description": "Allow HTTPS from anywhere"
        },
        {
          "name": "DenyAllInbound",
          "priority": 4096,
          "direction": "Inbound",
          "access": "Deny",
          "protocol": "*",                     // ← REQUIRED (matches any protocol)
          "sourcePortRange": "*",
          "destinationPortRange": "*",
          "sourceAddressPrefix": "*",
          "destinationAddressPrefix": "*",
          "description": "Deny all other inbound traffic"
        }
      ]
    },

    // ───────────────────────────────────────────────────────────────────────────
    // JIT module parameter
    // ───────────────────────────────────────────────────────────────────────────
    "vmName": {
      "value": "landingZone-VM"
    },

    // ───────────────────────────────────────────────────────────────────────────
    // Diagnostics module parameter
    // ───────────────────────────────────────────────────────────────────────────
    "diagnosticsWorkspaceId": {
      "value": "/subscriptions/00000000-0000-0000-0000-000000000000/resourceGroups/LogAnalytics-RG/providers/Microsoft.OperationalInsights/workspaces/MyLAWorkspace"
    }

    // Note: Policy and Role Assignment specs are loaded directly from
    //       landing-zone/template-specs/policyAssignment.json and
    //       landing-zone/template-specs/roleAssignment.json via loadJsonContent(),
    //       so they are NOT included here.
  }
}
